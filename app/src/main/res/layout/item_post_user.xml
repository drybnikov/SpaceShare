<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/grey_300"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/post_author_photo"
        android:layout_width="@dimen/space_image_width"
        android:layout_height="@dimen/space_image_width"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:src="@drawable/ic_action_account_circle_40"/>

    <TextView
        android:id="@+id/post_author"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/post_author_photo"
        tools:text="someauthor@email.com"/>

    <ImageView
        android:id="@+id/post_image_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_access_requested"/>

    <TextView
        android:id="@+id/post_status"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/post_image_status"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin"
        tools:text="REQUESTED"/>


</RelativeLayout>
